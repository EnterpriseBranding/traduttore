{
  "name": "wearerequired/traduttore",
  "type": "wordpress-plugin",
  "description": "WordPress.org-style translation API for your WordPress projects.",
  "keywords": [
    "wordpress",
    "glotpress",
    "translations"
  ],
  "homepage": "https://github.com/wearerequired/traduttore",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "required",
      "email": "info@required.ch",
      "homepage": "https://required.com",
      "role": "Company"
    },
    {
      "name": "Dominik Schilling",
      "email": "dominik@required.ch",
      "role": "Developer"
    },
    {
      "name": "Pascal Birchler",
      "email": "pascal@required.ch",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.1",
    "ext-zip": "*",
    "wearerequired/traduttore-registry": "^1.0"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.4",
    "phpunit/phpunit": "^6.5",
    "wp-cli/dist-archive-command": "^0.1",
    "wp-cli/extension-command": "^2.0",
    "wp-cli/wp-cli-tests": "dev-plugin-tests",
    "wp-coding-standards/wpcs": "^1.2"
  },
  "suggest": {
    "wpackagist-plugin/slack": "Send Slack notifications for various events"
  },
  "config": {
    "process-timeout": 7200,
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "3.0.x-dev"
    }
  },
  "autoload": {
    "psr-4": {
      "Required\\Traduttore\\": "inc"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Required\\Traduttore\\Tests\\": "tests/phpunit/tests"
    }
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/wp-cli/dist-archive-command.git"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "behat": [
      "run-behat-tests"
    ],
    "behat-rerun": "rerun-behat-tests",
    "build": [
      "composer install --no-dev",
      "wp dist-archive . $(pwd)/build/traduttore.zip",
      "rm -rf vendor",
      "composer install"
    ],
    "format": "phpcbf --report-summary --report-source .",
    "lint": "phpcs --report-summary --report-source .",
    "phpunit": "phpunit",
    "prepare-tests": "install-package-tests",
    "test": [
      "@lint",
      "@phpunit",
      "@behat"
    ]
  },
  "scripts-descriptions": {
    "behat": "Run functional tests",
    "behat-rerun": "Run Behat tests with the option to re-run failed tests",
    "build": "Build a ZIP archive containing the plugin files",
    "format": "Detect and automatically fix most coding standards issues",
    "lint": "Detect coding standards issues",
    "phpunit": "Run unit tests",
    "prepare-tests": "Prepare the plugin test suite",
    "test": "Run all tests at once"
  },
  "support": {
    "issues": "https://github.com/wearerequired/traduttore/issues"
  }
}
